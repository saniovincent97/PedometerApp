<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.svinc.running.Settings"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:id="@+id/layout"
    android:padding="24dp"
    android:background="?attr/backgroundcolour">


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="?attr/sectionbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="?attr/textcolour"
                android:text="@string/settings_text"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textcolour"
                android:text="@string/settings_desc"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="?attr/sectionbackground"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/textcolour"
                android:text="@string/setting_one" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_one"
                android:textColor="?attr/textcolour"
                android:layout_marginTop="5dp"
                android:buttonTint="?attr/tintcolour"/>
            <CheckBox
                android:id="@+id/changeIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_two"
                android:textColor="?attr/textcolour"
                android:buttonTint="?attr/tintcolour"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_one"
                android:textColor="?attr/textcolour"
                android:buttonTint="?attr/tintcolour"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="?attr/sectionbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/textcolour"
                android:text="@string/setting_two"/>
            <Switch
                android:id="@+id/setTheme"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_one"
                android:textColor="?attr/textcolour"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/textcolour"
                android:text="@string/progress_text"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>
            <Switch
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/theme_two"
                android:textColor="?attr/textcolour"/>
            <Switch
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/theme_three"
                android:textColor="?attr/textcolour"/>
            <Switch
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/theme_four"
                android:textColor="?attr/textcolour"/>
            <Switch
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/theme_five"
                android:textColor="?attr/textcolour"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_button"
            android:background="?attr/buttoncolour"/>
    </LinearLayout>


</LinearLayout>
